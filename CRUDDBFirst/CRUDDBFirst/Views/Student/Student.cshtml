@model CRUDDBFirst.Context.Student
@{
    ViewBag.Title = "Student";
}

<h2>Student</h2>

@using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
{ 
<div class="container">
    <div class="form-group">
        <label>Name</label>
        @Html.ValidationMessageFor(m => m.Name,"", new { @class="error" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Father Name</label>
        @Html.ValidationMessageFor(m => m.Fname, "", new { @class = "error" })
        @Html.TextBoxFor(m => m.Fname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mobile</label>
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "error" })
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "error" })
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "10" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</div>
}
